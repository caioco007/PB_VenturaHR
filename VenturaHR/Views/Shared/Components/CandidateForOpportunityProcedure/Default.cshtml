@model List<DTO.CandidateForOpportunity.CandidateForOpportunityProcedureViewModel>

<table class="table table-striped table-condensed table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.FullName</th>
            <th class="text-nowrap">@item.MobileNumber </th>
            <th class="text-nowrap">@item.Email</th>
            <th class="text-nowrap">@item.NotesByOpportunity</th>
        </tr>
        }
    </tbody>
</table>