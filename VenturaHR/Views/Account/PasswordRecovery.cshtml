@{
    ViewData["Title"] = "Esqueci minha Senha";
}


<form method="post" action="@Url.Action("PasswordRecovery", "Account")" autocomplete="off">
    <div class="row" style="margin-top: 1em; margin-bottom: 1em;">
        <div class="col-md-12 text-center">
            <img src="~/image/logo2.png" style="height: 145px;" />
        </div>
    </div>
    <div class="card mx-auto shadow bg-light" style="max-width: 500px;">
        <div class="card-body">
            @if (Context.Request.Query.ContainsKey("notfound"))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <span>E-mail não cadastrado.</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (Context.Request.Query.ContainsKey("error"))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <span>Houve um erro ao enviar a recuperação de senha.</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (Context.Request.Query.ContainsKey("emailsent"))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <span>Um e-mail de recuperação foi enviado, por favor, verifique sua caixa de entrada.</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <div class="form-group">
                <label class="control-label">E-mail</label>
                <input name="Email" type="email" required class="form-control" placeholder="E-mail" />
            </div>
        </div>
        <div class="card-footer d-block">
            <div class="row">
                <div class="col">
                    <a class="btn btn-secondary" href="@Url.Action("SignIn", "Account")"><i class="fas fa-arrow-left"></i> Voltar</a>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary float-right"><i class="fas fa-check"></i> Recuperar</button>
                </div>
            </div>
        </div>
    </div>
</form>
